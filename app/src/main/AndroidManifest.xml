<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flipbook.app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature android:name="android.hardware.camera.zoom"/>
    <uses-feature android:name = "android.hardware.camera.flash"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true">


        <activity android:name=".Welcome.LaunchActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTask">
        </activity>

        <activity android:name=".Users.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTask"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity android:name=".Users.RecoverAccount"
            android:screenOrientation="portrait"
            android:launchMode = "singleTask"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity android:name=".Registration.RegisterActivity"
            android:launchMode = "singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity android:name=".Registration.PersonalizeActivity"
            android:launchMode = "singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".Welcome.WelcomeActivity"
            android:launchMode = "singleTask"

            android:screenOrientation="portrait">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
        </activity>

        <activity android:name=".Users.ProfileActivity"
            android:launchMode = "singleTask"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Users.UserActivity"
            android:launchMode = "singleTask"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Users.EditProfileActivity"
            android:launchMode = "singleTask"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Users.SearchActivity"
            android:launchMode = "singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".Users.UserList"
            android:launchMode = "singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".Settings.SettingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Settings.ChangePasswordActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".Settings.NotificationSettingsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Camera.CameraActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Posts.ProcessingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>

        <activity android:name=".Posts.ShowActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".Posts.EditPostActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity android:name=".Posts.PostActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>