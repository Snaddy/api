<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:elevation="0dp"
        tools:ignore="UnusedAttribute,UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="@color/colorWhite">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/close"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/exit"
                android:background="@color/colorPrimary" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/arrow"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/next"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

        <com.flipbook.app.SquareLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/imagePreview"
           android:clickable="true" >

            <com.flipbook.app.SquareImageView
                android:layout_width="match_parent"
                app:srcCompat="@android:color/transparent"
                android:id="@+id/imageView"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/buttons"
                android:layout_gravity="bottom">

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/flash"
                    android:background="@drawable/flash"
                    android:layout_alignParentLeft="true"
                    android:textOn=""
                    android:textOff=""
                    tools:ignore="RtlHardcoded"
                    android:layout_alignParentBottom="true" />

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/switch_cameras"
                    android:background="@drawable/switch_cameras"
                    android:layout_alignParentRight="true"
                    android:textOn=""
                    android:textOff=""
                    tools:ignore="RtlHardcoded"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

        </com.flipbook.app.SquareLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/buttonLayout"
                android:padding="40dp">

                <ImageButton
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/camerabutton"
                    android:id="@+id/snap"
                    android:background="@android:color/transparent"
                    android:contentDescription=""
                    tools:ignore="ContentDescription"
                    android:layout_width="wrap_content"
                    android:cropToPadding="false"
                    android:adjustViewBounds="true" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/scrollView"
                android:background="@android:drawable/screen_background_dark_transparent"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/imageArray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:addStatesFromChildren="false"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:baselineAligned="false">

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>